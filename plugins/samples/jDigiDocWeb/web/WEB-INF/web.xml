<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>BdocServlet</servlet-name>
        <servlet-class>BdocServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DownloadFile</servlet-name>
        <servlet-class>DownloadFile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadBdocController</servlet-name>
        <servlet-class>controller.UploadBdocController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DownloadFile</servlet-name>
        <url-pattern>/DownloadFile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BdocServlet</servlet-name>
        <url-pattern>/BdocServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadBdocController</servlet-name>
        <url-pattern>/UploadBdocController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        </welcome-file-list>
    </web-app>
